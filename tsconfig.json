{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*",
        "node_modules/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "@types/**/*"
  ]
}
